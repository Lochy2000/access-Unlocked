# Example environment configuration
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
API_URL=http://localhost:3000/api

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/access_unlocked
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379

# API Keys (obtain from respective services)
OPENSTREETMAP_API_KEY=
WHEELMAP_API_KEY=
GOOGLE_PLACES_API_KEY=
MAPBOX_ACCESS_TOKEN=

# Authentication
# Generate secure random strings for these
JWT_SECRET=your_jwt_secret_min_32_characters_long
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_min_32_characters
REFRESH_TOKEN_EXPIRES_IN=7d

# Email (optional)
EMAIL_FROM=noreply@access-unlocked.local
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_ANONYMOUS=100
RATE_LIMIT_AUTHENTICATED=1000
RATE_LIMIT_WINDOW=3600

# Feature Flags
ENABLE_USER_CONTRIBUTIONS=true
ENABLE_ROUTE_PLANNING=false
MAINTENANCE_MODE=false

# Logging
LOG_LEVEL=info

# Monitoring (optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
